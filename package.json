{
  "name": "learning-git-2",
  "version": "1.0.0",
  "description": "Zadanie: Pierwsze repozytorium na GitHubie",
  "main": "index.js",
  "scripts": {
    "watch": "npm run watch:browser-sync",
    "watch:browser-sync": "browser-sync start --server --files \"css/*.css\" \"*.html\"",
	
	"build": "npm run build:clean && npm run build:sass && npm run build:autoprefixer && npm run test",
	"build:clean": "rimraf css/*",
	"build:sass": "node-sass --output-style compact -o css sass",
	"build:autoprefixer": "autoprefixer-cli css/style.css",

	"build-dev:sass": "node-sass --output-style expanded --source-map true -o css sass",

	"watch:sass": "node-sass --output-style expanded --source-map true -o css sass --watch",
	"watch:autoprefixer": "onchange -d 100 css/style.css -- autoprefixer-cli -o css/style.prefixed.css css/style.css"
	
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MaKuGitHub/learning-git-2.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MaKuGitHub/learning-git-2/issues"
  },
  "homepage": "https://github.com/MaKuGitHub/learning-git-2#readme",
  "devDependencies": {
    "autoprefixer-cli": "^1.0.0",
    "browser-sync": "^2.23.6",
    "globstar": "^1.0.0",
    "nu-html-checker": "^0.1.0",
    "rimraf": "^2.6.2"
  },
  "dependencies": {}
}
